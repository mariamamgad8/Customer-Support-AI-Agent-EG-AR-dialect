# Twilio (required for outbound calls)
TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN
TWILIO_FROM_NUMBER



# ElevenLabs TTS (if you use ElevenLabs)
ELEVEN_API_KEY
ELEVEN_VOICE_ID # optional, e.g. LXrTqFIgiubkrMkwvOUr
ELEVEN_MODEL_ID


# Public base URL that Twilio can reach (ngrok URL or your domain, include https://)
BASE_URL


######################################################################################################################
# Application runtime
PORT=5050
LOG_LEVEL=INFO

# Paths / model folders (optional, used if you store models on disk)
NLU_MODEL_DIR="./models/nlu"        # local path to your trained NLU model (optional)


AZURE_WHISPER_ENDPOINT
AZURE_WHISPER_API_KEY


# Embedding model id (used by retriever if you want to override)
EMB_MODEL = "sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2"
EMB_PATH="./models/embeddings.npy"
DOCS_PATH="./models/docs.json"


# LLM API Configuration (GPT-OSS 120B via Azure OpenAI)
GPT_OSS_API_URL
GPT_OSS_API_KEY
GPT_OSS_API_SCHEMA="openai"
GPT_OSS_MODEL="gpt-oss-120b"
RAG_TOP_K=3

# Twilio request validation (recommended: set to "true" to enable request signature checks)
TWILIO_VALIDATE_REQUESTS=true

# Misc / feature flags
USE_LOCAL_WHISPER=true   # "true" to use local Whisper in asr.py, "false" to use hosted ASR
ENABLE_RAG=true

USE_HF_INFERENCE=true
